---
import logo from '../images/alien.png'
---

<header class="header">
  <div class="container">
    <div class="logo">
      <a href="/">
        <img src={logo} alt="" />
      </a>
    </div>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/blog">Blog</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
  height: 120px;
  background: hsl(0 0% 0%/ 0.7);
}

@supports(backdrop-filter: blur(0.3rem)) {
  .header {
  background: hsl(0 0% 100%/ 0.1);
  backdrop-filter: blur(0.175rem);


  }
}
.header .container {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
}
.header img {
  height: 75px;
  vertical-align: middle;
}
.header nav ul {
  display: flex;
}
.header nav ul li {
  padding: 0 10px;
}
.header nav ul li a {
  color: #fff;
}
</style>